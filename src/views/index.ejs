<!doctype html>
<html lang="pt">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>CPF Contratos Ativos</title>
    <style>
        body {
            font-family: "Arial", sans-serif;
            font-size: 14px;
            margin: 0;
            background-color: #f4f4f4;
        }
        .container {
            width: 80%;
            margin: 50px auto;
            padding: 30px;
            background-color: #ffffff;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }
        .footer-top, .footer-bottom {
            width: 100%;
            height: 50px;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-size: 18px;
            font-weight: bold;
            background-color: #002c61;
        }
        .footer-bottom {
            position: fixed;
            bottom: 0;
            border-top-left-radius: 8px;
            border-top-right-radius: 8px;
            text-align: center;
        }
        .footer-top {
            position: fixed;
            top: 0;
        }
        .logo {
            font-size: 40px;
        }
        h1 {
            text-align: center;
            margin: 20px 0;
        }
        form {
            text-align: center;
            margin-bottom: 20px;
        }
        input[type="text"] {
            width: 300px;
            padding: 10px;
            font-size: 16px;
            border-radius: 12px;
            border: 1px solid #ccc;
            margin-right: 10px;
            box-sizing: border-box;
        }
        input[type="text"]::placeholder {
            color: rgba(0, 0, 0, 0.5);
        }
        button {
            padding: 10px 20px;
            font-size: 16px;
            border: none;
            border-radius: 12px;
            background-color: #4CAF50;
            color: white;
            cursor: pointer;
        }
        button:hover {
            background-color: #45a049;
        }
       
        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
            background-color: #ffffff;
            border: 1px solid #cccccc;
        }
        thead {
            background-color: #e0e0e0;
        }
        th, td {
            padding: 10px;
            text-align: left;
            border: 1px solid #dddddd;
        }
        th {
            background-color: #f0f0f0;
            font-weight: bold;
        }
        tr:nth-child(even) {
            background-color: #f9f9f9;
        }
        tr:hover {
            background-color: #e0e0e0;
        }
        .message {
            margin-top: 20px;
            font-size: 18px;
            color: red;
            text-align: center;
        }
        @media screen and (max-width: 600px) {
            * {
                box-sizing: border-box;
                height: auto;
            }
            .container {
                width: 100%;
                padding: 10px;
            }
            input[type="text"] {
                width: 60%;
                margin-right: 0;
                margin-bottom: 10px;
            }
            h1 {
                font-size: 24px;
            }
            .message {
                font-size: 16px;
            }
            .footer-top, .footer-bottom {
                font-size: 10px;
            }
        }
    </style>
</head>
<body>
    <div class="footer-top">
        <span class="logo">HBC Business</span>
    </div>
    <div class="container">
        <h1>CPF Contratos Ativos - Localizar</h1>
        <form method="post">
            <input type="text" id="documento" name="documento" placeholder="Documento" required>
            <button type="submit">Buscar</button>
        </form>
        <% if (tableData.length > 0) { %>
            <table>
                <thead>
                    <tr>
                        <th>Documento</th>
                        <th>Nome</th>
                        <th>Agência</th>
                        <th>Conta</th>
                        <th>Dígito</th>
                        <th>Valor</th>
                        <th>Vencimento</th>
                        <th>Parceiro</th>
                    </tr>
                </thead>
                <tbody>
                    <% tableData.forEach(row => { %>
                        <tr>
                            <td><%= row.Documento %></td>
                            <td><%= row.Nome %></td>
                            <td><%= row.Agencia %></td>
                            <td><%= row.Conta %></td>
                            <td><%= row.Digito %></td>
                            <td><%= row.Valor %></td>
                            <td><%= row.Data_Debito %></td>
                            <td><%= row.Parceiro %></td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        <% } else { %>
            <p class="message">Nenhum resultado encontrado. Tente outra busca.</p>
        <% } %>
    </div>
    <div class="footer-bottom">
        HBC Business Holding Business Corporate LTDA 46.221.302/0001-90
    </div>
    <script>
      document.addEventListener("DOMContentLoaded", function() {
        const rows = document.querySelectorAll("table tr");
        
        rows.forEach(row => {
          row.addEventListener("click", function() {
            // Remover a classe 'clicked' de todas as linhas
            rows.forEach(r => r.classList.remove("clicked"));
            
            // Adicionar a classe 'clicked' na linha clicada
            this.classList.add("clicked");
          });
        });
      });
    </script>
</body>
</html>
